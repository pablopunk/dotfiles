{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": true,
  "agent": {
    "plan": {
      "tools": {
        "write": false,
        "bash": false
      }
    }
  },
  "tools": {
    "bash": true,
    "glob": true,
    "grep": true,
    "list": true,
    "patch": true,
    "todoread": true,
    "todowrite": true,
    "webfetch": true,
    "write": true
  },
  "mcp": {
    "linear": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.linear.app/sse"
      ]
    }
  }
}
