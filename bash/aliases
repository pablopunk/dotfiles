alias g=git
alias gst='git status'
alias gp='git push'
alias gl='git pull'
alias glog='git log --oneline --decorate --graph'
alias gd='git diff -w --minimal'
alias gds='git diff -w --staged --minimal'
alias gc='git commit'
alias gcm='git commit -m'
alias gcam='git add -A && git commit -m'
alias gca='git add -A && git commit'
alias gck='git checkout'
alias gpr='git fetch upstream && git diff -w --minimal upstream/master'
# ls aliases
alias ls='ls -G'
alias ll='ls -lagh'
alias la='ls -a1'
alias l='ls -a1'
alias lr='ls -rt1' # most recent(t) file at the bottom(r) in 1 column(1)
alias t='tree -L 3'
# other
alias prof='PS4='"'"'$(date "+%s.%N ($LINENO) + ")'"'"' bash -x '
alias vvi='command vi -u ~/.vimrc.min' # true vim with no plugins
alias vim=nvim
alias vi=nvim
alias todo=todo.sh
alias rm-nvim-history='rm ~/.local/share/nvim/swap/*.swp'
alias rm=trash
alias mkidr='mkdir -p'
alias python2='pyenv global system && python'
alias pip2='pyenv global system && pip'
alias python3='pyenv global 3.5.7 && python'
alias pip3='pyenv global 3.5.7 && pip'
if [[ "$(uname)" == "Linux" ]]; then
  alias open=xdg-open
fi
