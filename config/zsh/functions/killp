# vim:fileencoding=utf-8:ft=zsh
local processes=$(ps aux | grep "$@" | grep -v grep)
local pids=$(echo "$processes" | awk '{print $2}')
local count=$(echo "$pids" | grep -v '^$' | wc -l | tr -d ' ')
if [[ $count -gt 0 ]]; then
   echo "$processes"
   echo "$pids" | xargs kill -9 2>/dev/null
fi
echo "Killed $count process(es) for '$@'"
