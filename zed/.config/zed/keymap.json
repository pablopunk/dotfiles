[
  {
    "context": "Terminal",
    "bindings": {
      // vim navigation in terminal too
      "ctrl-h": [
        "workspace::ActivatePaneInDirection",
        "Left"
      ],
      "ctrl-l": [
        "workspace::ActivatePaneInDirection",
        "Right"
      ],
      "ctrl-k": [
        "workspace::ActivatePaneInDirection",
        "Up"
      ],
      "ctrl-j": [
        "workspace::ActivatePaneInDirection",
        "Down"
      ]
    }
  },
  {
    // Only when Vim is active
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space": [
        "workspace::SendKeystrokes",
        "leader"
      ],
      "ctrl-o": "pane::GoBack",
      "ctrl-i": "pane::GoForward",
      "g r": "editor::FindAllReferences",
      "g d": "editor::GoToDefinition",
      "K": "editor::Hover",
      "ctrl-h": [
        "workspace::ActivatePaneInDirection",
        "Left"
      ],
      "ctrl-l": [
        "workspace::ActivatePaneInDirection",
        "Right"
      ],
      "ctrl-k": [
        "workspace::ActivatePaneInDirection",
        "Up"
      ],
      "ctrl-j": [
        "workspace::ActivatePaneInDirection",
        "Down"
      ],
      ") g": "editor::GoToHunk",
      "( g": "editor::GoToPrevHunk",
      "leader g r": "editor::RevertSelectedHunks",
      "leader f f": "file_finder::Toggle",
      "leader f s": "workspace::NewSearch"
    }
  },
  {
    // General bindings
    "bindings": {
      "cmd-r": "outline::Toggle",
      "cmd-t": "workspace::ToggleBottomDock",
      "cmd-j": "workspace::ToggleRightDock",
      "cmd-k": "assistant::InlineAssist"
    }
  }
]
