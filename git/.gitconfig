#vim: ft=gitconfig
[core]
  pager = delta --features "$( [[ \"`cat ~/.theme`\" == \"Dark\" ]] && echo dark-mode || echo light-mode)"
	editor = nvim -u ~/.vimrc
[delta "light-mode"]
  light = true
  syntax-theme = GitHub
[delta "dark-mode"]
  light = false
  syntax-theme = Visual Studio Dark+
[push]
  default = current
  autoSetupRemote = true
[pull]
	rebase = false
	default = current
[user]
	email = pablo@pablopunk.com
	name = Pablo P Varela
[blame]
  date = short
[interactive]
  diffFilter = delta --color-only
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
