source ~/.functions
source ~/.aliases
source ~/.path
F=$HOME/.hello; [ -f $F ] && . $F
F=$HOME/.additional; [ -f $F ] && . $F # aditional local config

# Vars
export EDITOR=nvim
export HISTSIZE=
export HISTFILESIZE=

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
  pre='(ssh:'$(hostname)') '
fi

function clock {
  date "+%H:%M:%S"
}

# Use bashy if it exist
if hash bashy 2>/dev/null; then
  export PS1='\[\e[32m\]$(clock)\[\e[39m\] ${pre}$(bashy -r) '
else
  export PS1='\[\e[32m\]$(clock)\[\e[39m\] ${pre}$ '
fi

# Bash completion
[ -f /etc/bash_completion ] && . /etc/bash_completion
[ -f /usr/local/etc/bash_completion ] && . /usr/local/etc/bash_completion
[[ -r "/usr/local/etc/profile.d/bash_completion.sh" ]] && . "/usr/local/etc/profile.d/bash_completion.sh"
# git completion (branches and stuff) for mac
[ -f /Library/Developer/CommandLineTools/usr/share/git-core/git-completion.bash ] && . /Library/Developer/CommandLineTools/usr/share/git-core/git-completion.bash

# Disable flow control commands (keeps C-s from freezing everything)
stty start undef
stty stop undef
