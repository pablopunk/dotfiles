# git aliases
alias g=git
alias gst='git status'
alias gp='git push'
alias gl='git pull'
alias glog='git log --oneline --decorate --graph'
alias gd='git diff -w'
alias gds='git diff -w --staged'
alias gcm='git commit -m'
alias gcam='git add -A && git commit -m'
alias gca='git add -A && git commit'
alias gck='git checkout'
function gclone {
  if [ "$1" = "pablopunk" ]; then
    git clone git@github.com:pablopunk/$2
  else
    git clone https://github.com/$1/$2
  fi
}
# ls aliases
alias ll='ls -lagh'
alias la='ls -a1'
alias l='ls -a1'
alias lr='ls -rt1' # most recent(t) file at the bottom(r) in 1 column(1)
alias t='tree -L 3'
# other
alias cacl='php app/console ca:cl -e prod && php app/console ca:cl -e dev'
alias prof='PS4='"'"'$(gdate "+%s.%N ($LINENO) + ")'"'"' bash -x '
alias vim=nvim
alias vi=nvim
alias todo=todo.sh
alias rm-nvim-history='rm ~/.local/share/nvim/swap/*.swp'
alias python=python3
alias pip=pip3
function masl {
  mas search $1 | head -n1 | awk '{print $1;}' | xargs mas install
}

# PATH
export PATH="/usr/local/bin:$HOME/.bin:$HOME/.npm-global/bin:$HOME/.cargo/bin:$PATH"

# Use bashy if it exist
if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
  pre='(ssh) '
fi
if hash bashy 2>/dev/null; then
  export PS1='${pre}$(bashy -r) '
else
  export PS1='${pre}\W '
fi

# Bash autocompletion
[[ -f /etc/bash_completion ]] && . /etc/bash_completion

# Use .bash_additional for no backed up configs
F=$HOME/.bash_additional; [ -f $F ] && . $F

# Disable flow control commands (keeps C-s from freezing everything)
stty start undef
stty stop undef
export PATH="$HOME/.cargo/bin:$PATH"
