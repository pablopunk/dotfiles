{
  "plugin": ["oh-my-opencode@latest", "opencode-plugin-auto-update@latest", "@mohak34/opencode-notifier@latest"],
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  // === Models ===
  "model": "openrouter/moonshotai/kimi-k2.5",
  "small_model": "openrouter/google/gemini-2.5-flash-lite",
  // === TUI ===
  "tui": {
    "scroll_acceleration": {
      "enabled": true  // macOS-style momentum scrolling
    }
  },
  // === Permissions ===
  "permission": {
    "external_directory": "allow",
    "bash": {
      "sudo *": "deny",
      "rm -rf /": "deny",
      "rm -rf /*": "deny",
      "rm -rf ~": "deny",
      "rm -rf ~/*": "deny",
      ":(){:|:&};:": "deny"  // fork bomb, just in case
    }
  },
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["bunx", "-y", "chrome-devtools-mcp@latest"]
    },
    "grep.app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  },
  // === Providers ===
  "provider": {
    "chatjimmy": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "ChatJimmy (local)",
      "options": {
        "baseURL": "http://localhost:3000/v1"
      },
      "models": {
        "llama3.1-8B": {
          "name": "Llama 3.1 8B"
        }
      }
    }
  }
}
