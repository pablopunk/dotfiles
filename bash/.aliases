# vim: set ft=zsh:
alias g=git
alias gst='git status'
alias gp='git push'
alias gl='git pull'
alias gf='git fetch'
alias glog='git log --oneline --decorate'
alias gd='git diff -w --minimal'
alias gds='git diff -w --staged --minimal'
alias gc='git commit'
function gcm {
  git commit -m "$*"
}
function gcam {
  if [[ "$*" == *--amend* ]]; then
    git commit "$@"
  else
    git add -A
    git commit -m "$*"
  fi
}
alias amend='git commit --amend'
alias gca='git add -A && git commit'
alias gpr='git fetch upstream && git diff -w --minimal upstream/master'
# ls aliases
alias ls='ls -G'
alias ll='ls -lagh'
alias la='ls -a1'
alias l='ls -a1'
alias lr='ls -rt1' # most recent(t) file at the bottom(r) in 1 column(1)
alias t='tree -L 3'
# other
alias prof='PS4='"'"'$(date "+%s.%N ($LINENO) + ")'"'"' bash -x '
alias vi=nvim
alias vvi='nvim -u ~/.vimrc'
alias viu='nvim -u NONE'
alias todo=todo.sh
alias rm-nvim-history='rm ~/.local/state/nvim/swap/*'
alias rm=trash
alias mkidr='mkdir -p'
if [[ "$(uname)" == "Linux" ]]; then
  alias open=xdg-open
else
  echo -n
  # alias brew='arch -arm64 brew'
  # alias brew='arch -x86_64 brew'
fi
alias n='npm run'
alias p='pnpm'
alias run='npx tsx'
# not in vim but who cares
alias :q='exit'
alias :qa='exit'
alias :x='exit'
alias :xa='exit'
# github copilot
alias "??"="gh copilot suggest -t shell"
alias "git\?"="gh copilot suggest -t git"
